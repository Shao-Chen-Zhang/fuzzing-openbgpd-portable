Subject: [PATCH 1/4] depend on carp requieres HAVE_CARP

---
 src/usr.sbin/bgpd/parse.y | 6 ++++++
 1 file changed, 6 insertions(+)

diff --git src/usr.sbin/bgpd/parse.y src/usr.sbin/bgpd/parse.y
index e48fdb4009e..57c09fc878c 100644
--- src/usr.sbin/bgpd/parse.y
+++ src/usr.sbin/bgpd/parse.y
@@ -1595,6 +1595,7 @@ peeropts	: REMOTEAS as4number	{
 			free($3);
 		}
 		| DEMOTE STRING		{
+#ifdef HAVE_CARP
 			if (strlcpy(curpeer->conf.demote_group, $2,
 			    sizeof(curpeer->conf.demote_group)) >=
 			    sizeof(curpeer->conf.demote_group)) {
@@ -1611,6 +1612,11 @@ peeropts	: REMOTEAS as4number	{
 				    curpeer->conf.demote_group);
 				YYERROR;
 			}
+#else
+			yyerror("carp demote not supported");
+			free($2);
+			YYERROR;
+#endif
 		}
 		| TRANSPARENT yesno	{
 			if ($2 == 1)
